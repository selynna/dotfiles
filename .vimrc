syntax enable
set number
highlight LineNr ctermfg=gray

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
 
set autoindent
filetype indent on
  
set showcmd
set wildmenu
  
set cursorline
hi CursorLine cterm=NONE ctermbg=darkgray 
  
set lazyredraw
set showmatch
 
set incsearch
set hlsearch 
